{
  "compilerOptions": {
    "strict": false,
    "target": "esNext",
    "module": "esNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "importHelpers": false,
    "lib": ["es2017", "dom", "dom.iterable", "scripthost"],
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": [
      "src/custom-typings",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*",
    "**/*.spec.*",
    "**/build/**",
    "**/dist/**",
    "**/*.stories.*"
  ]
}
